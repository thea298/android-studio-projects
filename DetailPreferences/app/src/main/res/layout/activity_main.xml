<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/selectPreferencesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Preferences" />

    <Button
        android:id="@+id/showPreferencesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Preferences" />

    <Button
        android:id="@+id/deletePreferencesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Preferences" />
</LinearLayout>